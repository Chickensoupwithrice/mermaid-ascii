{
  "name": "mermaid-ascii",
  "version": "1.0.0",
  "description": "Convert Mermaid diagrams to ASCII art. A TypeScript library and CLI tool for rendering beautiful text-based diagrams.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "mermaid-ascii": "dist/cli.js"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/anishlakhwara/mermaid-ascii.git"
  },
  "homepage": "https://github.com/anishlakhwara/mermaid-ascii#readme",
  "bugs": {
    "url": "https://github.com/anishlakhwara/mermaid-ascii/issues"
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "start": "node dist/cli.js",
    "dev": "ts-node src/cli.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "mermaid",
    "ascii",
    "diagram",
    "cli",
    "flowchart",
    "text-diagram",
    "ascii-art",
    "typescript",
    "library"
  ],
  "author": "Anish Lakhwara <anish@lakhwara.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2"
  },
  "dependencies": {
    "commander": "^11.1.0"
  }
}
